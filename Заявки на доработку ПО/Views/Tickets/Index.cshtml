@model Заявки_на_доработку_ПО.Classes.PaginatedList<Заявки_на_доработку_ПО.Classes.Ticket>

@{
    ViewData["Title"] = "Заявки";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Заявки</h2>
    <a asp-action="Create" class="btn btn-success">Добавить заявку</a>
</div>

<table class="table table-light table-striped">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                ПО
            </th>
            <th>
                Email
            </th>
            <th>
                Описание
            </th>
            <th>
                Дата окончания разработки
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Название)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ПО.Название)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Описание)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ДатаОкончанияРазработки)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    <span>@Model.PageIndex of @Model.TotalPages</span>
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-outline-primary">Предыдущая</a>
    }
    @if (Model.HasNextPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-secondary">Следующая</a>
    }
</div>
